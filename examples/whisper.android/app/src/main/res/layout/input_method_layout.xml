<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp"/>

    <RadioGroup
        android:id="@+id/languageSelectorGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/languageSelectorAuto"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Auto"
            android:checked="true" />

        <RadioButton
            android:id="@+id/languageSelectorEnglish"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="English" />

        <RadioButton
            android:id="@+id/languageSelectorGerman"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="German" />

        <RadioButton
            android:id="@+id/languageSelectorEnglishModel"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eng. Model" />

    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <RadioGroup
                android:id="@+id/modelSelectorGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/modelSelectorAccurate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accurate" />
                <RadioButton
                    android:id="@+id/modelSelectorBalanced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balanced"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/modelSelectorFast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fast" />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <Switch
                android:id="@+id/translateSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Translate"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/modelLoadingIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleSmall"
                    android:visibility="invisible"
                    />

                <ProgressBar
                    android:id="@+id/computationIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleSmall"
                    android:visibility="invisible"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.61">

            <ToggleButton
                android:id="@+id/recordButton"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:textOff="Record"
                android:textOn="Stop recording"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/improveButton"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Improve"
                android:textSize="16sp"
                android:enabled="false"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <ImageButton
                android:id="@+id/spaceButton"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:src="@drawable/space_bar_24px"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:src="@drawable/backspace_24px"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/returnButton"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:src="@drawable/keyboard_return_24px"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/defaultInputMethodSwitchButton"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:src="@drawable/keyboard_previous_language_24px"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/exitButton"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:src="@drawable/keyboard_off_24px"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>