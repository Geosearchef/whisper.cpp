<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/languageSelectorAuto"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Auto" />

        <RadioButton
            android:id="@+id/languageSelectorEnglish"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="English" />

        <RadioButton
            android:id="@+id/languageSelectorGerman"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="German" />

        <RadioButton
            android:id="@+id/languageSelectorEnglishModel"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="English Model" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/modelSelectorAccurate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accurate" />
                <RadioButton
                    android:id="@+id/modelSelectorBalanced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balanced" />
                <RadioButton
                    android:id="@+id/modelSelectorFast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fast" />
            </RadioGroup>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Translate"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/recordButton"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:textOff="Record"
                android:textOn="Stop recording"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/improveButton"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Improve"
                android:textSize="16sp"
                android:enabled="false"
                />

            <Button
                android:id="@+id/spaceButton"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Space"
                android:textSize="16sp"
                />

            <ProgressBar
                android:id="@+id/modelLoadingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:visibility="invisible"
                />

            <ProgressBar
                android:id="@+id/computationIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:visibility="invisible"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Delete"
                android:textSize="16sp" />

            <Button
                android:id="@+id/enterButton"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Enter"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/defaultInputMethodSwitchButton"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:text="Switch"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/exitButton"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:text="Exit"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>